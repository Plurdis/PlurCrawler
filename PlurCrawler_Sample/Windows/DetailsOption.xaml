<Page x:Class="PlurCrawler_Sample.Windows.DetailsOption"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PlurCrawler_Sample.Windows"
      xmlns:controls="clr-namespace:PlurCrawler_Sample.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="DetailsOption">
    <Grid>
        <TabControl TabStripPlacement="Left">
            <TabItem Header="Google CSE">
                <StackPanel Margin="10">
                    <controls:PropertyTextBox PropertyName="검색 갯수" Description="* 검색 갯수의 기본값은 10개 입니다.&#x0a;* 해당 검색 갯수는 검색 타입에 따라서 의미가 달라집니다." Style="{StaticResource PropertyTextBoxStyle}"/>
                    <controls:DatePickerRange PropertyName="검색 범위 : " Style="{StaticResource DatePickerRangeStyle}"/>

                    <controls:PropertyGroupBox Header="검색 방식 : ">
                        <WrapPanel>
                            <RadioButton Margin="5" Content="날짜 전체를 기준으로 검색"/>
                            <RadioButton Margin="5" Content="하루를 기준으로 검색"/>
                        </WrapPanel>
                    </controls:PropertyGroupBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Youtube"/>
            <TabItem Header="Twitter"/>
            
        </TabControl>
    </Grid>
</Page>
