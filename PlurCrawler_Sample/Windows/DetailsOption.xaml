<Page x:Class="PlurCrawler_Sample.Windows.DetailsOption"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PlurCrawler_Sample.Windows"
      xmlns:controls="clr-namespace:PlurCrawler_Sample.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="DetailsOption">
    <Grid>
        <TabControl TabStripPlacement="Left">
            <TabItem Header="Google CSE">
                <StackPanel Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="검색 갯수"/>
                        <TextBox Grid.Column="1"/>
                    </Grid>
                    <controls:PropertyTextBox Margin="10" PropertyName="검색 갯수" Style="{StaticResource PropertyTextBoxStyle}"/>
                    <controls:DatePickerRange Style="{StaticResource DatePickerRangeStyle}"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Youtube"/>
            <TabItem Header="Twitter"/>
            
        </TabControl>
    </Grid>
</Page>
