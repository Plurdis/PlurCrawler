<Window x:Class="PlurCrawler_Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlurCrawler_Sample"
        xmlns:ctrl="clr-namespace:PlurCrawler_Sample.Controls"
        xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.Resources>
                <Style TargetType="{x:Type ctrl:ImageTextBlock}" BasedOn="{StaticResource {x:Type ctrl:ImageTextBlock}}">
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <ctrl:ImageTextBlock x:Name="authGoogleCheck" Text="인증되지 않음" Source="Resources/icon_google.png" Foreground="Red"/>
            <ctrl:ImageTextBlock x:Name="authTwitterCheck" Text="인증되지 않음" Source="Resources/icon_twitter.png" Grid.Column="1" Foreground="Red"/>
            <ctrl:ImageTextBlock x:Name="authYoutubeCheck" Text="인증되지 않음" Source="Resources/icon_youtube.png" Grid.Column="2" Foreground="Red"/>
        </Grid>
        <Grid Grid.Row="1">
            <GroupBox Header="검색어 방식" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Margin="5,0" Text="검색어" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="tbQuery" Margin="10,0" Text="" Grid.Column="1" VerticalAlignment="Center"/>
                    <Button x:Name="btnSearch" Grid.Column="2" Margin="5,0" Content="작업 시작" VerticalAlignment="Center" Padding="30,5"/>
                    <Grid Grid.Row="1" Grid.ColumnSpan="2">
                        <WrapPanel HorizontalAlignment="Center">
                            <CheckBox x:Name="cbGoogleService" Margin="5" Content="구글 CSE"/>
                            <CheckBox x:Name="cbTwitterService" Margin="5" Content="트위터" Grid.Column="1"/>
                            <CheckBox x:Name="cbYoutubeService" Margin="5" Content="유튜브" Grid.Column="2"/>
                        </WrapPanel>
                    </Grid>
                </Grid>
            </GroupBox>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="300" MinWidth="300"/>
            </Grid.ColumnDefinitions>
            <TabControl x:Name="mainTabControl" SelectedIndex="1" BorderBrush="{x:Null}">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TabItem}">
                                    <ContentPresenter Content="{TemplateBinding ContentTemplate}"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style> 
                </TabControl.Resources>
                <TabItem x:Name="tiLog">
                    <ListView x:Name="lvLog">
                        <ListViewItem Content="[System] 검색 시스템을 초기화중입니다."/>
                        <ListViewItem Content="[System] ....."/>
                    </ListView>
                </TabItem>

                <TabItem x:Name="tiVertification">
                    <Frame x:Name="frVertManager"
                        Source="/PlurCrawler_Sample;component/Windows/VertificationManager.xaml" NavigationUIVisibility="Hidden"/>
                </TabItem>
            </TabControl>

            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="5"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="작업 목록" Margin="5"/>
                    <ListView x:Name="lvTask" Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListView>
                </Grid>

                <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch"/>

                <Frame x:Name="frOption" Grid.Row="2" Source="/PlurCrawler_Sample;component/Windows/DetailsOption.xaml" NavigationUIVisibility="Hidden" />
            </Grid>
            
        </Grid>
    </Grid>
</Window>
